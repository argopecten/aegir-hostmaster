{
    "name": "argopecten/aegir-hostmaster",
    "description": "Aegir Hostmaster profile with composer",
    "type": "drupal-profile",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "PÃ©ter Gerner",
            "role": ""
        }
    ],
    "repositories": {
        "aegir": {
            "type": "vcs",
            "url":  "https://github.com/argopecten/aegir-composer"
        },
        "provision": {
            "type": "vcs",
            "url":  "https://github.com/argopecten/aegir-provision"
        },
        "drupal": {
              "type": "composer",
              "url": "https://packages.drupal.org/7"
        },
        "hostmaster": {
            "type": "vcs",
            "url":  "https://github.com/argopecten/aegir-hostmaster"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "composer/installers": "^1.9",
        "composer/semver": "^1.4",
        "cweagans/composer-patches": "^1.7",
        "drupal-composer/preserve-paths": "^0.1.6",
        "drupal/composer_autoloader": "^1.0",
        "drupal/drupal": "^7.100",
        "drush/drush": "^8.0",
        "symfony/filesystem": "~2.7 || ^3",
        "webflo/drupal-finder": "^1.2.1",
        "argopecten/hostmaster": "^3.182.1"
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
      "sort-packages": true,
      "allow-plugins": {
          "composer/installers": true,
          "cweagans/composer-patches": true,
          "drupal-composer/preserve-paths": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
          "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
          "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
          "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
          "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
          "DrupalProject\\composer\\ScriptHandler::removeInternalFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "hostmaster": ["type:drupal-core"],
            "hostmaster/profiles/{$name}/": ["type:drupal-profile"],
            "hostmaster/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "hostmaster/sites/all/libraries/{$name}/": ["type:drupal-library"],
            "hostmaster/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "hostmaster/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "patches-install-hooks": true,
        "patches": {
            "cweagans/composer-patches": {
                "Call the preserve paths hooks" : "https://github.com/SebCorbin/composer-patches/commit/1cb9bacba51f8bba0c5f3f322c3bb61e4ceae974.patch"
            }
        },
        "preserve-paths": [
            "hostmaster/sites"
        ]
    }
}
